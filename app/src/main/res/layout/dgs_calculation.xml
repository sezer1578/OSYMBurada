<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">

    </include>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(60)Türkçe:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <EditText

            android:id="@+id/trDgsDogru"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Doğru"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />
        <EditText
            android:id="@+id/trDgsYanlis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Yanlış"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(60)Matematik:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"


            />
        <EditText
            android:id="@+id/matDgsDogru"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Doğru"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            />
        <EditText
            android:id="@+id/matDgsYanlis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Yanlış"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Önlisans B. Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:id="@+id/basariPuani"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Ör. 60.40"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionGo"
            />



    </GridLayout>

    <CheckBox
        android:id="@+id/dgsTik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Önceki DGS'de bir programa yerleştirildim."
        />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:visibility="visible"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/dgsHesapla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HESAPLA"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="60dp"

            />

        <Button
            android:id="@+id/dgsTemizle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMİZLE"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background2"
            android:layout_marginLeft="40dp"

            />
    </GridLayout>

    <TextView
        android:id="@+id/hesaplamaSonucu"
        android:visibility="invisible"
        android:text=" HESAPLAMA SONUÇLARI"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"

        />

    <GridLayout
        android:id="@+id/netSonuclari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6"
        android:visibility="invisible"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Türkçe Neti:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/dgsSozelNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematik Neti:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/dgsSayisalNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sayısal Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/dgsSayisalPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLength="7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sözel Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/sozelPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            android:maxLength="7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eşit Ağırlık Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/dgsEsitPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLength="7"
            />

    </GridLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_dgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7273254954010969/5250731913">

    </com.google.android.gms.ads.AdView>


</LinearLayout>