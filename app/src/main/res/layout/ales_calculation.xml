<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">

    </include>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:visibility="visible"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(50)Türkçe:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />

        <EditText

            android:id="@+id/trAlesDogru"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Doğru"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />

        <EditText

            android:id="@+id/trAlesYanlis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Yanlış"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(50)Matematik:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <EditText

            android:id="@+id/matAlesDogru"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Doğru"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionNext"
            />
        <EditText

            android:id="@+id/matAlesYanlis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Yanlış"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:imeOptions="actionGo"
            />


    </GridLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:visibility="visible"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/alesHesapla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HESAPLA"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="60dp"

            />

        <Button
            android:id="@+id/alesTemizle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMİZLE"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background2"
            android:layout_marginLeft="40dp"

            />
    </GridLayout>

    <TextView
        android:id="@+id/alesHesaplamaSonucu"
        android:visibility="invisible"
        android:text=" HESAPLAMA SONUÇLARI"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"

        />

    <GridLayout
        android:id="@+id/alesNetSonuclari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6"
        android:visibility="invisible"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Türkçe Neti:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/alesSozelNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematik Neti:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/alesSayisalNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sayısal Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/alesSayisalPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLength="7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sözel Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/alesSozelPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            android:maxLength="7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eşit Ağırlık Puanı:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/alesEsitPuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLength="7"
            />



    </GridLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7273254954010969/3603727887">

    </com.google.android.gms.ads.AdView>


    </LinearLayout>